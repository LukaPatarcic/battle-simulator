{
  "compilerOptions": {
    "target": "es5",
    "baseUrl": "app",
    "paths": {
      "@element/*": [
        "components/elements/*"
      ],
      "@layout/*": [
        "components/layouts/*"
      ],
      "@module/*": [
        "components/modules/*"
      ],
      "@template/*": [
        "components/templates/*"
      ],
      "@styles/*": [
        "styles/*"
      ],
      "@constant/*": [
        "constants/*"
      ],
      "@context/*": [
        "context/*"
      ],
      "@hook/*": [
        "hooks/*"
      ],
      "@helper/*": [
        "helpers/*"
      ],
      "@api/*": [
        "api/*"
      ],
      "@type/*": [
        "types/*"
      ]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "es2017"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "typeRoots": [
      "node_modules/@types"
    ],
    "incremental": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
